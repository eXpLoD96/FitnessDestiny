@model SearchViewModel

@{
    ViewData["Title"] = $"Search Results For {Model.SearchText}";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Articles.Any())
{
    <h3>Found Articles</h3>

    <div class="row course-listings">
        @await Html.PartialAsync("_ArticlesListingPartial", Model.Articles)
    </div>
}
else
{
    <h3>No Articles to show.</h3>
}

<br />

@if (Model.Supplements.Any())
{
    <h3>Found Supplements</h3>

    <ul>
        @foreach (var supplement in Model.Supplements)
        {
            <li><a asp-area="Store" asp-controller="Store" asp-action="Details" asp-route-id="@supplement.Id">@supplement.Name - @supplement.Brand Supplements</a></li>
        }
    </ul>
}

else
{
    <h3>No Supplements to show.</h3>
}

@if (Model.Users.Any())
{
    <h3>Found users</h3>

    <ul>
        @foreach (var user in Model.Users)
        {
            <li><a asp-controller="Users" asp-action="Profile" asp-route-username="@user.Username">@user.Name - @user.Programs Programs</a></li>
        }
    </ul>
}
else
{
    <h3>No users to show.</h3>
}