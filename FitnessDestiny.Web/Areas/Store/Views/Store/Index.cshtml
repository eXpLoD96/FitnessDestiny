@model SupplementListingViewModel
@{
    ViewData["Title"] = "Index";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/store.css" />
    </environment>
</head>

<div class="wrapper">
    <div class="desc">
        <h1>Ecommerce product list/grid</h1>
        <p>Simple html/css  ecommerce product grid with a hover effect.</p>

        <div class="todo">
            <span>TODO list:</span>
            <ul>
                <li>Make it responsive folk!</li>
            </ul>
        </div>
        <div class="content">
            <!-- content here -->
            <div class="product-grid product-grid--flexbox">
                <div class="product-grid__wrapper">
                    @foreach (var supplement in Model.Supplements)
            {
                        <div class="product-grid__product-wrapper">
                            <div class="product-grid__product">
                                <div class="product-grid__img-wrapper">
                                    <img src="https://images.apple.com/euro/macbook/a/screens/specs/images/finish_silver_large.jpg" alt="Img" class="product-grid__img" />
                                </div>
                                <span class="product-grid__title">@supplement.Name</span>
                                <span class="product-grid__price">@supplement.Price</span>
                                <div class="product-grid__extend-wrapper">
                                    <div class="product-grid__extend">
                                        <p class="product-grid__description">@supplement.Description</p>
                                        <span class="product-grid__btn product-grid__add-to-cart"><i class="fa fa-cart-arrow-down"></i> Add to cart</span>
                                        <span class="product-grid__btn product-grid__view"><i class="fa fa-eye"></i> View more</span>
                                        <a asp-action="Details" asp-route-id="@supplement.Id" asp-route-title="@supplement.Description.ToFriendlyUrl()">@supplement.Name</a>
                                        <br />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.TotalSupplements > Model.Supplements.Count())
{
    <ul class="pagination">
        <li class="@(Model.CurrentPage == 1 ? "disabled" : string.Empty)">
            <a asp-route-page="@Model.PreviousPage"
               aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)">
            <a asp-route-page="@Model.NextPage"
               aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
}

